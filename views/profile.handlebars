{{! Use the main layout }}
{{!< main }}

<div class="profile-container">
    <div class="profile-header">
        <div class="profile-avatar">
            <img src="{{#if user.avatar_url}}{{user.avatar_url}}{{else}}/avatar/{{user.username}}{{/if}}" alt="{{user.username}}'s avatar">
        </div>
        <div class="profile-info">
            <h1>{{user.username}}</h1>
            <p class="member-since">Member since: {{user.memberSince}}</p>
        </div>
    </div>

    <section class="user-posts">
        <h2>Your {{{postNeoType}}}s</h2>
        
        {{#if posts.length}}
            <ul>
                {{#each posts}}
                    {{> post this loggedIn=../loggedIn userId=../userId}}
                {{/each}}
            </ul>
        {{else}}
            <p>You have not posted yet, poster.</p>
        {{/if}}
    </section>
</div>
